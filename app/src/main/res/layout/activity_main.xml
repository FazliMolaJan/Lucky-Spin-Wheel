<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffcccc"
    android:id="@+id/ma"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_weight="1.5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Number Of Option"
                android:textColor="#ff0000"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="monospace"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="3.6">

                <ImageView
                    android:id="@+id/substract"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/ic_navigate_before_black_24dp"/>

                    <EditText
                        android:id="@+id/editttext"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="#ffffff"
                        android:inputType="number"
                        />

                    <ImageView
                        android:id="@+id/addition"
                        android:layout_width="50dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/right_add"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Min : 3  |  Max : 25"
                    android:textColor="#ff0000"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    />

            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="2">


            <Button
                android:id="@+id/load"
                android:background="@drawable/button"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:textStyle="bold"
                android:layout_marginRight="35dp"
                android:textSize="18dp"
                android:text="LOAD"
                />

            <Button
                android:id="@+id/ok"
                android:background="@drawable/button"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="OK"
                />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">


    </LinearLayout>


</LinearLayout>